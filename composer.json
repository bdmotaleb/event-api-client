{
    "name": "bdmotaleb/event-api-client",
    "description": "Lightweight PHP client for sending events to external API",
    "type": "library",
    "license": "MIT",
    "keywords": ["api", "client", "events", "tracking", "analytics"],
    "authors": [
        {
            "name": "bdmotaleb",
            "email": "bdmotaleb33@gmail.com"
        }
    ],
    "homepage": "https://github.com/bdmotaleb/event-api-client",
    "support": {
        "issues": "https://github.com/bdmotaleb/event-api-client/issues",
        "source": "https://github.com/bdmotaleb/event-api-client"
    },
    "autoload": {
        "psr-4": {
            "Bdmotaleb\\EventApiClient\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "require": {
        "php": ">=8.0",
        "ext-curl": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "quality": [
            "@cs-check",
            "@phpstan",
            "@test"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}

